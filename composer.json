{
    "name": "tistre/simple-oauth-login",
    "type": "library",
    "description": "Replaces your login form with OAuth2",
    "homepage": "https://www.strehle.de/tim/oauth_demo/",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Strehle",
            "email": "tim@strehle.de"
        }
    ],
    "require": {
        "league/oauth2-client": "^2.2",
        "guzzlehttp/guzzle": "^6.0"
    },
    "suggest": {
        "league/oauth2-linkedin": "Required for LinkedIn support",
        "league/oauth2-google": "Required for Google support",
        "league/oauth2-github": "Required for Github support"
    },
    "autoload": {
        "psr-4": {
            "Tistre\\SimpleOAuthLogin\\": "src/"
        }
    }
}
